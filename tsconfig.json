{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "baseUrl": ".",
        "module": "esnext",
        "target": "es5",
        "allowJs": true,
        "checkJs": false,
        "jsx": "react",
    
        "rootDir": ".",
        "removeComments": true,
        "noEmit": true,
        "pretty": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
        "./lib/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}